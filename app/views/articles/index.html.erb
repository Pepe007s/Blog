	<div class="row">
		<% @articulos.each do |articulo| %>
			<div class="col-sm-12 col-md-6 col-lg-4">
				<div class="jumbotron">
					<h1><%= link_to articulo.title, articulo %></h1>
					<p><%= articulo.body %></p>
					<%=	link_to "Editar", edit_article_path(articulo), class:"btn btn-danger"%>
					<%=	link_to "Eliminar #{articulo.title}", articulo, method: :delete, data: {confirm: "Â¿Estas seguro de Eliminar el articulo #{articulo.title}?"}, class:"btn btn-primary"%>
				</div>
			</div>
		<% end %>
	</div>
</div>